    "preinstall": "npx only-allow pnpm",
    "lint:style": "stylelint .vitepress/**/*.{css,less,vue} --fix"
  },
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "@fontsource/noto-serif-sc": "^5.2.8",
    "dayjs": "^1.11.19",
    "naive-ui": "^2.43.2",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "glob": "^12.0.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "less": "^4.4.2",
    "lint-staged": "^16.2.6",
    "markdown-it-mathjax3": "^5.2.0",
    "pnpm": "^9.0.1",
    "postcss-html": "^1.8.0",
    "postcss-less": "^6.0.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.3",
    "vitepress": "1.6.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{css,less,vue}": [
      "stylelint .vitepress/**/*.{css,less,vue} --fix"
